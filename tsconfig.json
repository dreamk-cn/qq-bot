{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/core/*": [
        "src/core/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    // 调试
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // 添加对装饰器的支持
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
